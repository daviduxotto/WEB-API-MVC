
@model Entidades.eObservacionUV

@using (Html.BeginForm("guardarNuevaObservacion", "observacionUV", FormMethod.Post, new { id = "popupForm" }))
{
    <h4>Nueva observación</h4>
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.codPantalla, new { htmlAttributes = new { @class = "hidden" , @Value = ViewBag.codPantalla } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="descripcion">Descripción</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.descripcion)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
